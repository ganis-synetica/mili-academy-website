<style>
  main {
    overflow-x: hidden;
  }
  
  .section-tag {
    display: inline-block;
    padding: 6px 14px;
    background: rgba(234, 31, 103, 0.1);
    color: var(--color-pink);
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Hero */
  .feature-hero {
    padding: 160px 0 100px;
    background: linear-gradient(135deg, #f8f9fb 0%, #eef1f5 100%);
    text-align: center;
  }
  
  .hero-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .feature-hero h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--color-navy);
    margin-bottom: 24px;
  }
  
  .feature-hero p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 32px;
  }
  
  /* Modern Learning Section */
  .modern-section {
    padding: 100px 0;
    background: white;
  }
  
  .modern-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }
  
  .modern-section h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-navy);
    margin-bottom: 60px;
  }
  
  .content-types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
  }
  
  .content-type-card {
    background: #FAFBFC;
    padding: 32px;
    border-radius: 20px;
    text-align: left;
    transition: all 0.3s ease;
  }
  
  .content-type-card:hover {
    background: white;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    transform: translateY(-4px);
  }
  
  .content-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 16px;
  }
  
  .content-type-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 12px;
  }
  
  .content-type-card p {
    font-size: 15px;
    line-height: 1.6;
    color: var(--color-text);
  }
  
  /* Capabilities */
  .capability-section {
    padding: 100px 0;
  }
  
  .capability-section.alt-bg {
    background: #FAFBFC;
  }
  
  .capability-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .capability-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  .capability-content.reverse {
    direction: rtl;
  }
  
  .capability-content.reverse > * {
    direction: ltr;
  }
  
  .capability-tag {
    display: inline-block;
    padding: 6px 14px;
    background: var(--color-navy);
    color: white;
    border-radius: 50px;
    font-size: 11px;
    font-weight: 700;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .capability-text h2 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-navy);
    margin-bottom: 20px;
  }
  
  .capability-text p {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text);
  }
  
  .capability-visual {
    display: flex;
    justify-content: center;
  }
  
  .visual-placeholder {
    width: 100%;
    max-width: 480px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    padding: 24px;
    box-shadow: 0 30px 60px rgba(102, 126, 234, 0.3);
  }
  
  .library-mockup {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    padding: 20px;
  }
  
  .library-search {
    margin-bottom: 20px;
  }
  
  .search-bar {
    height: 40px;
    background: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 12px;
  }
  
  .search-filters {
    display: flex;
    gap: 8px;
  }
  
  .search-filters span {
    height: 28px;
    width: 60px;
    background: #eee;
    border-radius: 6px;
  }
  
  .library-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  
  .content-item {
    background: #FAFBFC;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .item-thumb {
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, #e0e5ec 0%, #d0d5dc 100%);
  }
  
  .item-title {
    height: 12px;
    width: 70%;
    background: #ddd;
    margin: 12px;
    border-radius: 4px;
  }
  
  /* Formats Section */
  .formats-section {
    padding: 100px 0;
    background: linear-gradient(135deg, var(--color-navy) 0%, #2d2875 100%);
    text-align: center;
  }
  
  .formats-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .formats-section .section-tag {
    background: rgba(255, 255, 255, 0.15);
    color: white;
  }
  
  .formats-section h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    line-height: 1.2;
    color: white;
    margin-bottom: 60px;
  }
  
  .formats-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }
  
  .format-item {
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    font-size: 15px;
    font-weight: 500;
    color: white;
    transition: all 0.2s ease;
  }
  
  .format-item:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }
  
  @media (max-width: 1024px) {
    .capability-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .capability-content.reverse {
      direction: ltr;
    }
    
    .capability-visual {
      order: -1;
    }
  }
  
  @media (max-width: 768px) {
    .feature-hero {
      padding: 140px 0 80px;
    }
    
    .modern-section,
    .capability-section,
    .formats-section {
      padding: 80px 0;
    }
    
    .content-types-grid {
      grid-template-columns: 1fr;
    }
    
    .formats-grid {
      gap: 8px;
    }
    
    .format-item {
      padding: 10px 18px;
      font-size: 14px;
    }
  }
</style>

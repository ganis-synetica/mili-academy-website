      ctaLink="/features#automation"
      imagePosition="right"
    />
    
    <FeatureBlock 
      tag="Lacak"
      title="Visibilitas penuh atas program pelatihan Anda"
      description="Dashboard real-time dan laporan detail memberikan insight tentang completion rates, level engagement, dan perkembangan skill di seluruh organisasi. Export data, schedule reports, dan integrasikan dengan BI tools Anda."
      ctaText="Lihat Analytics & Reporting"
      ctaLink="/features/reporting"
      imagePosition="left"
    />
    
    <!-- Features Accordion - Admins -->
    <FeaturesAccordion 
      id="admin-features"
      tagText="DIBANGUN UNTUK ADMIN"
      sectionTitle="Dirancang untuk Learners"
      sectionDescription="Tools powerful yang membuat pembuatan dan pengelolaan konten jadi effortless"
      features={adminFeatures}
    />
    
    <!-- Features Accordion - HR -->
    <FeaturesAccordion 
      id="hr-features"
      tagText="DIBANGUN UNTUK HR"
      sectionTitle="Oleh L&D Professionals"
      sectionDescription="Dorong pengembangan karyawan dan lacak skills di seluruh organisasi"
      features={hrFeatures}
      altBackground={true}
    />
    
    <!-- Testimonials Section - removed (awaiting real testimonials) -->
    
    <!-- CTA Section -->
    <CTASection 
      title="Dapatkan saran khusus untuk solusi Anda."
      description="Diskusikan dengan kami hari ini. Demo 15 menit, tanpa komitmen."
    />

---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import CTASection from '../../components/CTASection.astro';
import Footer from '../../components/Footer.astro';

const featuredPost = {
  title: "5 Tren Learning & Development yang Akan Dominasi 2026",
  excerpt: "Dari AI-powered learning hingga microlearning, lihat tren L&D yang perlu Anda ketahui untuk tetap kompetitif.",
  category: "Trends",
  date: "7 Feb 2026",
  readTime: "8 min read",
  image: "/blog/featured.jpg"
};

const posts = [
  {
    title: "Cara Membangun Onboarding Program yang Efektif",
    excerpt: "Panduan langkah demi langkah untuk membuat onboarding yang membuat karyawan baru produktif dalam 30 hari.",
    category: "Onboarding",
    date: "5 Feb 2026",
    readTime: "6 min read"
  },
  {
    title: "ROI Training: Cara Mengukur Dampak Program L&D",
    excerpt: "Framework untuk menghitung return on investment dari program training Anda.",
    category: "Analytics",
    date: "2 Feb 2026",
    readTime: "10 min read"
  },
  {
    title: "Microlearning: Kenapa Training Singkat Lebih Efektif",
    excerpt: "Research menunjukkan training 5-10 menit punya retention rate lebih tinggi. Ini alasannya.",
    category: "Best Practices",
    date: "28 Jan 2026",
    readTime: "5 min read"
  },
  {
    title: "Compliance Training yang Tidak Membosankan",
    excerpt: "Tips membuat mandatory training yang engaging dan memorable untuk karyawan.",
    category: "Compliance",
    date: "25 Jan 2026",
    readTime: "7 min read"
  },
  {
    title: "Memilih LMS: Panduan untuk HR Indonesia",
    excerpt: "Faktor-faktor yang perlu dipertimbangkan saat memilih platform learning management.",
    category: "Guides",
    date: "20 Jan 2026",
    readTime: "12 min read"
  },
  {
    title: "AI dalam L&D: Hype vs Reality",
    excerpt: "Apa yang benar-benar bisa dilakukan AI untuk training, dan apa yang masih butuh human touch.",
    category: "Technology",
    date: "15 Jan 2026",
    readTime: "9 min read"
  }
];

const categories = ["All", "Trends", "Onboarding", "Compliance", "Best Practices", "Technology", "Guides", "Analytics"];
---

<Layout 
  title="Blog - Mili Academy" 
  description="Insights, tips, dan best practices untuk Learning & Development professionals di Indonesia."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-container">
        <span class="section-tag">Blog</span>
        <h1>Insights untuk L&D Professionals</h1>
        <p>
          Tips, best practices, dan thought leadership untuk membantu Anda 
          membangun program learning & development yang lebih baik.
        </p>
      </div>
    </section>
    
    <!-- Featured Post -->
    <section class="featured-section">
      <div class="featured-container">
        <div class="featured-card">
          <div class="featured-image">
            <div class="image-placeholder">
              <span>üìö</span>
            </div>
          </div>
          <div class="featured-content">
            <span class="post-category">{featuredPost.category}</span>
            <h2>{featuredPost.title}</h2>
            <p>{featuredPost.excerpt}</p>
            <div class="post-meta">
              <span>{featuredPost.date}</span>
              <span>‚Ä¢</span>
              <span>{featuredPost.readTime}</span>
            </div>
            <a href="#" class="btn btn-primary">
              Baca Selengkapnya
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Categories Filter -->
    <section class="filter-section">
      <div class="filter-container">
        <div class="categories">
          {categories.map((cat, i) => (
            <button class={`category-btn ${i === 0 ? 'active' : ''}`}>{cat}</button>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Posts Grid -->
    <section class="posts-section">
      <div class="posts-container">
        <div class="posts-grid">
          {posts.map(post => (
            <article class="post-card">
              <div class="post-image">
                <div class="image-placeholder small">
                  <span>üìù</span>
                </div>
              </div>
              <div class="post-content">
                <span class="post-category">{post.category}</span>
                <h3>{post.title}</h3>
                <p>{post.excerpt}</p>
                <div class="post-meta">
                  <span>{post.date}</span>
                  <span>‚Ä¢</span>
                  <span>{post.readTime}</span>
                </div>
              </div>
            </article>
          ))}
        </div>
        
        <div class="load-more">
          <button class="btn btn-outline-dark">Load More Articles</button>
        </div>
      </div>
    </section>
    
    <!-- Newsletter Section -->
    <section class="newsletter-section">
      <div class="newsletter-container">
        <div class="newsletter-content">
          <span class="section-tag">Newsletter</span>
          <h2>Dapatkan insights L&D terbaru</h2>
          <p>
            Subscribe newsletter kami untuk tips, trends, dan best practices 
            langsung ke inbox Anda. Tidak spam, hanya konten berkualitas.
          </p>
          <form class="newsletter-form">
            <input type="email" placeholder="Email Anda" required />
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>
          <span class="newsletter-note">Join 5,000+ L&D professionals</span>
        </div>
      </div>
    </section>
    
    <CTASection 
      title="Siap implementasi insights ini?"
      description="Jadwalkan demo untuk lihat bagaimana Mili Academy bisa membantu."
    />
  </main>
  
  <Footer />
</Layout>

<style>
  main {
    overflow-x: hidden;
  }
  
  .section-tag {
    display: inline-block;
    padding: 6px 14px;
    background: rgba(234, 31, 103, 0.1);
    color: var(--color-pink);
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Hero */
  .hero {
    padding: 160px 0 80px;
    background: linear-gradient(135deg, #f8f9fb 0%, #eef1f5 100%);
    text-align: center;
  }
  
  .hero-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .hero h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--color-navy);
    margin-bottom: 20px;
  }
  
  .hero p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text);
  }
  
  /* Featured Post */
  .featured-section {
    padding: 60px 0;
  }
  
  .featured-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
  }
  
  .featured-image {
    min-height: 400px;
  }
  
  .image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-pink) 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-placeholder span {
    font-size: 4rem;
  }
  
  .image-placeholder.small span {
    font-size: 2.5rem;
  }
  
  .featured-content {
    padding: 48px 48px 48px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .post-category {
    display: inline-block;
    padding: 4px 12px;
    background: #f5f7fa;
    color: var(--color-pink);
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 16px;
    width: fit-content;
  }
  
  .featured-content h2 {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-navy);
    margin-bottom: 16px;
    line-height: 1.3;
  }
  
  .featured-content > p {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 20px;
  }
  
  .post-meta {
    display: flex;
    gap: 8px;
    font-size: 14px;
    color: var(--color-muted);
    margin-bottom: 24px;
  }
  
  /* Filter */
  .filter-section {
    padding: 20px 0;
    border-bottom: 1px solid #eee;
  }
  
  .filter-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .categories {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  
  .category-btn {
    padding: 8px 16px;
    border: 1px solid #eee;
    border-radius: 20px;
    background: white;
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .category-btn:hover,
  .category-btn.active {
    background: var(--color-navy);
    border-color: var(--color-navy);
    color: white;
  }
  
  /* Posts Grid */
  .posts-section {
    padding: 60px 0;
  }
  
  .posts-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }
  
  .post-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }
  
  .post-image {
    height: 180px;
  }
  
  .post-content {
    padding: 24px;
  }
  
  .post-content h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 12px;
    line-height: 1.4;
  }
  
  .post-content p {
    font-size: 14px;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: 16px;
  }
  
  .load-more {
    text-align: center;
    margin-top: 48px;
  }
  
  .btn-outline-dark {
    background: transparent;
    border: 2px solid var(--color-navy);
    color: var(--color-navy);
  }
  
  .btn-outline-dark:hover {
    background: var(--color-navy);
    color: white;
  }
  
  /* Newsletter */
  .newsletter-section {
    padding: 100px 0;
    background: linear-gradient(135deg, var(--color-navy) 0%, #2d2875 100%);
  }
  
  .newsletter-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }
  
  .newsletter-section .section-tag {
    background: rgba(255, 255, 255, 0.15);
    color: white;
  }
  
  .newsletter-content h2 {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 800;
    color: white;
    margin-bottom: 16px;
  }
  
  .newsletter-content > p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 32px;
  }
  
  .newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 450px;
    margin: 0 auto 16px;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 14px 20px;
    border: none;
    border-radius: 8px;
    font-size: 15px;
  }
  
  .newsletter-note {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
  }
  
  @media (max-width: 1024px) {
    .featured-card {
      grid-template-columns: 1fr;
    }
    
    .featured-image {
      min-height: 250px;
    }
    
    .featured-content {
      padding: 32px;
    }
    
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 140px 0 60px;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
  }
</style>

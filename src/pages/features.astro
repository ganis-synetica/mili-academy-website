<Layout 
  title="Fitur - Mili Academy" 
  description="Semua fitur yang Anda butuhkan untuk membangun, mengelola, dan men-scale program pelatihan enterprise."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="features-hero">
      <div class="hero-container">
        <span class="section-tag">Fitur Lengkap</span>
        <h1>Semua yang Anda butuhkan untuk L&D enterprise</h1>
        <p>
          Dari pembuatan konten dengan AI hingga analytics mendalam â€” 
          satu platform untuk seluruh siklus learning & development.
        </p>
      </div>
    </section>
    
    <!-- Feature Categories -->
    {featureCategories.map((category, index) => (
      <section class={`feature-category ${index % 2 === 1 ? 'alt-bg' : ''}`} id={category.id}>
        <div class="category-container">
          <div class="category-header">
            <h2>{category.title}</h2>
            <p>{category.description}</p>
          </div>
          
          <div class="features-grid">
            {category.features.map((feature) => (
              <div class="feature-card">
                <span class="feature-icon">{feature.icon}</span>
                <h3>{feature.name}</h3>
                <p>{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    ))}
    
    <!-- CTA Section -->
    <CTASection 
      title="Ingin lihat semua fitur in action?"
      description="Jadwalkan demo 15 menit. Tim kami akan tunjukkan bagaimana fitur-fitur ini bisa solve kebutuhan spesifik Anda."
    />
  </main>
  
  <Footer />
</Layout>

<style>
  main {
    overflow-x: hidden;
  }
  
  .features-hero {
    padding: 160px 0 80px;
    background: linear-gradient(135deg, #f8f9fb 0%, #eef1f5 100%);
    text-align: center;
  }
  
  .hero-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .section-tag {
    display: inline-block;
    padding: 6px 14px;
    background: rgba(234, 31, 103, 0.1);
    color: var(--color-pink);
    border-radius: 50px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .features-hero h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--color-navy);
    margin-bottom: 20px;
  }
  
  .features-hero p {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text);
  }
  
  .feature-category {
    padding: 80px 0;
  }
  
  .feature-category.alt-bg {
    background: #FAFBFC;
  }
  
  .category-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .category-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .category-header h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 800;
    color: var(--color-navy);
    margin-bottom: 12px;
  }
  
  .category-header p {
    font-size: 1.125rem;
    color: var(--color-text);
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }
  
  .feature-card {
    background: white;
    padding: 32px;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    transition: all var(--transition-normal);
  }
  
  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }
  
  .feature-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 16px;
  }
  
  .feature-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 12px;
  }
  
  .feature-card p {
    font-size: 15px;
    line-height: 1.6;
    color: var(--color-text);
  }
  
  @media (max-width: 768px) {
    .features-hero {
      padding: 140px 0 60px;
    }
    
    .feature-category {
      padding: 60px 0;
    }
    
    .category-header {
      margin-bottom: 40px;
    }
    
    .features-grid {
      gap: 16px;
    }
    
    .feature-card {
      padding: 24px;
    }
  }
</style>

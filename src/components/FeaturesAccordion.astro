---
// Features accordion with expandable items
interface Feature {
  title: string;
  description: string;
  icon?: string;
  link?: string;
}

interface Props {
  sectionTitle: string;
  sectionDescription?: string;
  features: Feature[];
  id?: string;
  tagText?: string;
  altBackground?: boolean;
}

const { 
  sectionTitle, 
  sectionDescription, 
  features, 
  id = 'features',
  tagText = 'FITUR',
  altBackground = false
} = Astro.props;
---

<section class={`features-accordion ${altBackground ? 'alt-bg' : ''}`} id={id}>
  <div class="accordion-container">
    <div class="accordion-header">
      <span class="section-tag">{tagText}</span>
      <h2 class="accordion-title">{sectionTitle}</h2>
      {sectionDescription && <p class="accordion-description">{sectionDescription}</p>}
    </div>
    
    <div class="accordion-content">
      <div class="accordion-list">
        {features.map((feature, index) => (
          <div class="accordion-item" data-index={index}>
            <button 
              class={`accordion-trigger ${index === 0 ? 'active' : ''}`}
              aria-expanded={index === 0 ? 'true' : 'false'}
              aria-controls={`panel-${id}-${index}`}
            >
              <div class="trigger-content">
                <span class="trigger-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 8V16M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </span>
                <span class="trigger-title">{feature.title}</span>
              </div>
              <svg class="chevron" width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <div 
              class={`accordion-panel ${index === 0 ? 'open' : ''}`}
              id={`panel-${id}-${index}`}
              role="region"
            >
              <p class="panel-content">{feature.description}</p>
              {feature.link && (
                <a href={feature.link} class="panel-link">
                  Pelajari lebih lanjut
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
      
      <div class="accordion-media">
        <div class="media-placeholder">
          <div class="media-inner">
            <div class="media-mockup">
              <div class="mockup-header">
                <div class="mockup-dots">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              </div>
              <div class="mockup-content">
                <div class="mockup-sidebar">
                  <div class="mockup-nav-item active"></div>
                  <div class="mockup-nav-item"></div>
                  <div class="mockup-nav-item"></div>
                  <div class="mockup-nav-item"></div>
                </div>
                <div class="mockup-main">
                  <div class="mockup-card"></div>
                  <div class="mockup-card small"></div>
                  <div class="mockup-card small"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.accordion-trigger').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const item = trigger.closest('.accordion-item');
      const panel = item?.querySelector('.accordion-panel');
      const isActive = trigger.classList.contains('active');
      
      // Close all panels in this accordion
      const accordion = trigger.closest('.features-accordion');
      accordion?.querySelectorAll('.accordion-trigger').forEach(t => {
        t.classList.remove('active');
        t.setAttribute('aria-expanded', 'false');
      });
      accordion?.querySelectorAll('.accordion-panel').forEach(p => {
        p.classList.remove('open');
      });
      
      // Open clicked panel if it wasn't already active
      if (!isActive) {
        trigger.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
        panel?.classList.add('open');
      }
    });
  });
</script>

<style>
  .features-accordion {
    padding: 100px 0;
    background: white;
  }
  
  .features-accordion.alt-bg {
    background: #FAFBFC;
  }
  
  .accordion-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .accordion-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .section-tag {
    display: inline-block;
    padding: 6px 14px;
    background: rgba(234, 31, 103, 0.1);
    color: var(--color-pink);
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .accordion-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--color-navy);
    margin-bottom: 16px;
  }
  
  .accordion-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .accordion-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }
  
  .accordion-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .accordion-item {
    background: #FAFBFC;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .features-accordion.alt-bg .accordion-item {
    background: white;
  }
  
  .accordion-item:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }
  
  .accordion-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 24px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background var(--transition-fast);
  }
  
  .accordion-trigger:hover {
    background: rgba(0, 0, 0, 0.02);
  }
  
  .accordion-trigger.active {
    background: rgba(234, 31, 103, 0.05);
  }
  
  .trigger-content {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  
  .trigger-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-navy);
    color: white;
    border-radius: 12px;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }
  
  .accordion-trigger.active .trigger-icon {
    background: var(--color-pink);
  }
  
  .trigger-icon svg {
    width: 20px;
    height: 20px;
  }
  
  .trigger-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--color-navy);
  }
  
  .chevron {
    width: 20px;
    height: 20px;
    color: var(--color-muted);
    transition: transform var(--transition-fast);
    flex-shrink: 0;
  }
  
  .accordion-trigger.active .chevron {
    transform: rotate(180deg);
    color: var(--color-pink);
  }
  
  .accordion-panel {
    display: none;
    padding: 0 24px 24px;
  }
  
  .accordion-panel.open {
    display: block;
  }
  
  .panel-content {
    font-size: 15px;
    line-height: 1.7;
    color: var(--color-text);
    padding-left: 60px;
    margin-bottom: 12px;
  }
  
  .panel-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding-left: 60px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-pink);
    text-decoration: none;
    transition: gap 0.2s ease;
  }
  
  .panel-link:hover {
    gap: 10px;
  }
  
  .accordion-media {
    position: sticky;
    top: 100px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  
  .media-placeholder {
    width: 100%;
    max-width: 500px;
    aspect-ratio: 1;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 32px;
    box-shadow: 0 30px 80px rgba(102, 126, 234, 0.3);
  }
  
  .media-inner {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .media-mockup {
    width: 100%;
    max-width: 380px;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }
  
  .mockup-header {
    padding: 12px 16px;
    background: #f5f5f5;
    border-bottom: 1px solid #eee;
  }
  
  .mockup-dots {
    display: flex;
    gap: 6px;
  }
  
  .mockup-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #ddd;
  }
  
  .mockup-dots span:first-child {
    background: #ff5f57;
  }
  
  .mockup-dots span:nth-child(2) {
    background: #ffbd2e;
  }
  
  .mockup-dots span:last-child {
    background: #27ca40;
  }
  
  .mockup-content {
    display: flex;
    min-height: 250px;
  }
  
  .mockup-sidebar {
    width: 60px;
    background: #fafafa;
    padding: 16px 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    border-right: 1px solid #eee;
  }
  
  .mockup-nav-item {
    height: 32px;
    border-radius: 6px;
    background: #eee;
  }
  
  .mockup-nav-item.active {
    background: var(--color-pink);
  }
  
  .mockup-main {
    flex: 1;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .mockup-card {
    height: 80px;
    border-radius: 8px;
    background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
  }
  
  .mockup-card.small {
    height: 40px;
  }
  
  @media (max-width: 1024px) {
    .accordion-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .accordion-media {
      position: static;
      order: -1;
    }
    
    .media-placeholder {
      max-width: 400px;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 640px) {
    .features-accordion {
      padding: 80px 0;
    }
    
    .accordion-trigger {
      padding: 16px 20px;
    }
    
    .trigger-icon {
      width: 40px;
      height: 40px;
    }
    
    .panel-content,
    .panel-link {
      padding-left: 56px;
    }
    
    .media-placeholder {
      padding: 20px;
    }
  }
</style>

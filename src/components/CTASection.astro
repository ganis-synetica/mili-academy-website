---
// Call-to-action section
interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title = "Siap tingkatkan pelatihan tim Anda?",
  description = "Jadwalkan demo 15 menit. Kami tunjukkan bagaimana Mili Academy bisa menyederhanakan learning & development di perusahaan Anda.",
  ctaText = "Jadwalkan Demo",
  ctaLink = "/contact"
} = Astro.props;
---

<section class="cta-section">
  <div class="cta-container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-description">{description}</p>
      <a href={ctaLink} class="btn btn-cta">
        {ctaText}
        <svg width="24" height="24" viewBox="0 0 49 44" fill="none">
          <path d="M29.9175 3.10659C28.2041 1.39326 25.4214 1.3895 23.7043 3.10659L20.609 6.20189L35.6976 21.2905C35.9537 21.5466 35.9574 21.9646 35.6976 22.2244L20.609 37.313L23.7043 40.4083C25.4176 42.1217 28.2004 42.1254 29.9137 40.4121L47.0131 23.3126C47.8717 22.4541 47.8679 21.0646 47.0131 20.2098L29.9137 3.11036L29.9175 3.10659Z" fill="currentColor"/>
          <path d="M17.4911 10.4795C15.7777 8.76618 12.995 8.76242 11.2779 10.4795L9.00724 12.7502L17.5475 21.2905C17.8036 21.5465 17.8074 21.9645 17.5475 22.2243L9.00724 30.7646L11.2779 33.0353C12.9912 34.7486 15.774 34.7524 17.4911 33.0353L27.2138 23.3126C28.0723 22.454 28.0685 21.0645 27.2138 20.2097L17.4911 10.4871V10.4795Z" fill="currentColor"/>
        </svg>
      </a>
    </div>
    
    <!-- Decorative elements -->
    <div class="cta-decoration">
      <div class="decoration-circle circle-1"></div>
      <div class="decoration-circle circle-2"></div>
      <div class="decoration-circle circle-3"></div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 100px 0;
    background: var(--color-navy);
    position: relative;
    overflow: hidden;
  }
  
  .cta-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }
  
  .cta-content {
    text-align: center;
  }
  
  .cta-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    color: white;
    margin-bottom: 20px;
  }
  
  .cta-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 32px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .btn-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 36px;
    background: white;
    color: var(--color-navy);
    font-size: 16px;
    font-weight: 700;
    border-radius: 50px;
    transition: all var(--transition-normal);
  }
  
  .btn-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .btn-cta svg {
    width: 20px;
    height: 20px;
  }
  
  .cta-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }
  
  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }
  
  .circle-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #EA1F67 0%, #764ba2 100%);
    top: -200px;
    left: -100px;
  }
  
  .circle-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    bottom: -150px;
    right: -50px;
  }
  
  .circle-3 {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    top: 50%;
    right: 20%;
    transform: translateY(-50%);
  }
  
  @media (max-width: 768px) {
    .cta-section {
      padding: 80px 0;
    }
  }
</style>

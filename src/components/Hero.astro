<style>
  .hero {
    padding: 140px 0 60px;
    background: var(--color-white);
    overflow: hidden;
    min-height: 100vh;
  }
  
  .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  .hero-content {
    max-width: 600px;
  }
  
  .hero-social-proof {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }
  
  .trust-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(30, 26, 92, 0.05);
    border-radius: 50px;
  }
  
  .trust-text {
    font-size: 13px;
    font-weight: 600;
    color: var(--color-navy);
  }
  
  .avatar-stack {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 12px;
    font-weight: 600;
    border: 2px solid white;
    margin-left: -8px;
  }
  
  .avatar:first-child {
    margin-left: 0;
  }
  
  .avatar-text {
    font-size: 14px;
    color: var(--color-text);
    margin-left: 8px;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--color-navy);
    margin-bottom: 24px;
  }
  
  .pill {
    display: inline-block;
    padding: 4px 16px;
    border-radius: 50px;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    margin: 4px 4px;
  }
  
  .pill-create {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .pill-deploy {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
  }
  
  .pill-automate {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    color: white;
  }
  
  .pill-track {
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
  }
  
  .word-and {
    font-size: clamp(2rem, 4vw, 3.5rem);
    margin: 0 8px;
  }
  
  .title-rest {
    display: block;
    margin-top: 8px;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 32px;
    max-width: 500px;
  }
  
  .hero-cta {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .cta-note {
    font-size: 14px;
    color: var(--color-muted);
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 16px;
    width: fit-content;
  }
  
  .hero-media {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .video-wrapper {
    width: 100%;
    max-width: 560px;
    aspect-ratio: 16/9;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(30, 26, 92, 0.15);
  }
  
  .video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }
  
  .video-placeholder span {
    font-size: 14px;
    color: var(--color-muted);
  }
  
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .hero-content {
      max-width: 100%;
      text-align: center;
    }
    
    .hero-social-proof {
      justify-content: center;
    }
    
    .hero-description {
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero-cta {
      align-items: center;
    }
    
    .hero-media {
      order: -1;
    }
  }
  
  @media (max-width: 640px) {
    .hero {
      padding: 120px 0 60px;
    }
    
    .pill {
      font-size: 1.2rem;
      padding: 2px 12px;
    }
    
    .hero-social-proof {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>

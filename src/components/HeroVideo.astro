<style>
  .demo-video {
    position: relative;
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
  }
  
  .demo-browser {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 
      0 20px 60px rgba(30, 26, 92, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }
  
  .browser-header {
    background: #f8f9fa;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 16px;
    border-bottom: 1px solid #e9ecef;
  }
  
  .browser-dots {
    display: flex;
    gap: 6px;
  }
  
  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  
  .dot.red { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green { background: #28c840; }
  
  .browser-url {
    flex: 1;
    background: #fff;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    color: #666;
    text-align: center;
  }
  
  .browser-content {
    display: flex;
    height: 360px;
    overflow: hidden;
  }
  
  /* Sidebar */
  .demo-sidebar {
    width: 180px;
    background: linear-gradient(180deg, #1E1A5C 0%, #2d2875 100%);
    padding: 16px 12px;
    flex-shrink: 0;
  }
  
  .sidebar-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px;
    margin-bottom: 20px;
  }
  
  .logo-icon {
    width: 28px;
    height: 28px;
    background: linear-gradient(135deg, #EA1F67, #ff6b9d);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 14px;
  }
  
  .sidebar-logo span {
    color: white;
    font-size: 13px;
    font-weight: 600;
  }
  
  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .nav-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 12px;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .nav-item:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .nav-item.active {
    background: rgba(255, 255, 255, 0.15);
    color: white;
  }
  
  .nav-item.highlight {
    position: relative;
  }
  
  .badge-new {
    background: linear-gradient(135deg, #EA1F67, #ff6b9d);
    color: white;
    font-size: 9px;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: auto;
    animation: pulse-badge 2s ease-in-out infinite;
  }
  
  .nav-icon {
    font-size: 14px;
  }
  
  /* Main content */
  .demo-main {
    flex: 1;
    padding: 16px 20px;
    background: #f8fafc;
    overflow: hidden;
  }
  
  .main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }
  
  .main-header h2 {
    font-size: 18px;
    font-weight: 700;
    color: #1E1A5C;
    margin: 0;
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .notification-badge {
    background: #EA1F67;
    color: white;
    font-size: 10px;
    padding: 2px 6px;
    border-radius: 10px;
    animation: bounce-in 0.5s ease-out 2s both;
  }
  
  .user-avatar {
    width: 28px;
    height: 28px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 10px;
    font-weight: 600;
  }
  
  /* Stats */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .stat-card {
    background: white;
    border-radius: 10px;
    padding: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }
  
  .stat-label {
    font-size: 10px;
    color: #666;
    margin-bottom: 4px;
  }
  
  .stat-value {
    font-size: 20px;
    font-weight: 700;
    color: #1E1A5C;
  }
  
  .stat-trend {
    font-size: 10px;
    color: #666;
  }
  
  .stat-trend.up {
    color: #22c55e;
  }
  
  /* Progress section */
  .progress-section {
    background: white;
    border-radius: 10px;
    padding: 12px;
    margin-bottom: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }
  
  .progress-section h3 {
    font-size: 12px;
    font-weight: 600;
    color: #1E1A5C;
    margin: 0 0 12px;
  }
  
  .progress-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .progress-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .progress-info {
    display: flex;
    justify-content: space-between;
    font-size: 10px;
  }
  
  .team-name {
    color: #333;
  }
  
  .progress-percent {
    color: #1E1A5C;
    font-weight: 600;
  }
  
  .progress-bar {
    height: 6px;
    background: #e9ecef;
    border-radius: 3px;
    overflow: hidden;
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #667eea, #764ba2);
    border-radius: 3px;
    width: 0;
    animation: fill-progress 1.5s ease-out 0.5s forwards;
  }
  
  /* Activity section */
  .activity-section {
    background: white;
    border-radius: 10px;
    padding: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }
  
  .activity-section h3 {
    font-size: 12px;
    font-weight: 600;
    color: #1E1A5C;
    margin: 0 0 10px;
  }
  
  .activity-feed {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .activity-item {
    display: flex;
    align-items: center;
    gap: 8px;
    opacity: 0;
    transform: translateX(-10px);
    animation: slide-in 0.4s ease-out forwards;
  }
  
  .activity-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 10px;
    font-weight: 600;
    flex-shrink: 0;
  }
  
  .activity-content {
    flex: 1;
    font-size: 10px;
    color: #666;
  }
  
  .activity-name {
    color: #1E1A5C;
    font-weight: 600;
  }
  
  .activity-course {
    color: #667eea;
  }
  
  .activity-time {
    font-size: 9px;
    color: #999;
  }
  
  /* Floating notification */
  .floating-notification {
    position: absolute;
    top: 60px;
    right: -20px;
    background: white;
    border-radius: 10px;
    padding: 10px 14px;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 11px;
    color: #333;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    opacity: 0;
    transform: translateX(20px);
    animation: float-in 0.5s ease-out 2.5s forwards;
  }
  
  .notif-icon {
    font-size: 16px;
  }
  
  /* Animations */
  @keyframes fill-progress {
    to {
      width: var(--target);
    }
  }
  
  @keyframes slide-in {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes bounce-in {
    0% {
      opacity: 0;
      transform: scale(0);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  @keyframes float-in {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes pulse-badge {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .browser-content {
      height: 300px;
    }
    
    .demo-sidebar {
      width: 140px;
      padding: 12px 8px;
    }
    
    .sidebar-logo span {
      display: none;
    }
    
    .nav-item span:not(.nav-icon) {
      font-size: 10px;
    }
    
    .stats-row {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .floating-notification {
      display: none;
    }
  }
</style>
